+package main
+
+import (
+	pwl "github.com/justjanne/powerline-go/powerline"
+	"os"
+	"strconv"
+)
+
+func segmentShlvl(p *powerline) []pwl.Segment {
+
+	level, _ := os.LookupEnv("SHLVL")
+	leveli, err := strconv.Atoi(level)
+
+	if err != nil || leveli < 1 {
+		return []pwl.Segment{}
+	}
+	return []pwl.Segment{{
+		Name:       "shlvl",
+		Content:    "\uE7A2 " + level,
+		Foreground: 231,
+		Background: 55,
+	}}
+}
